<table>
% my $i = 0;
% while ( my $CustomField = $CustomFields->next ) {
% next unless $CustomField->current_user_has_right('ModifyCustomField');
% $i++;
% if ( $i % 2 ) {
<tr>
% }
<td width="50%">
<table>
  <tr id="CF-<%$CustomField->id%>-EditRow">
    <td class="labeltop">
      <b><%$CustomField->name%></b><br />
      <i><%$CustomField->FriendlyType%></i>
    </td>
    <td class="entry">
      <& /Elements/EditCustomField, 
          Object => $ticket_obj,
          CustomField => $CustomField,
          namePrefix => $namePrefix,
          Default => $m->notes('Field-' . $CustomField->id),
      &>
%  if (my $msg = $m->notes('InvalidField-' . $CustomField->id)) {
        <br />
        <em style="color: red"><% $msg %></em>
%  }
    </td>
  </tr>
</table>
</td>

% unless ( $i % 2 ) {
</tr>
% }

% }

%# close row if required
% if ( $i % 2 ) {
</tr>
% }

</table>
<%INIT>
my $CustomFields;

if ($ticket_obj) {
    $CustomFields = $ticket_obj->custom_fields();
    $namePrefix .= "Object-RT::Model::Ticket-".$ticket_obj->id."-CustomField-";
} else {
    $CustomFields = $queue_obj->TicketCustomFields();
    $namePrefix .= "Object-RT::Model::Ticket--CustomField-";
}

$m->callback( Callbackname => 'MassageCustomFields', CustomFields => $CustomFields );

</%INIT>
<%ARGS>
$namePrefix => ''
$ticket_obj => undef
$queue_obj => undef
</%ARGS>
