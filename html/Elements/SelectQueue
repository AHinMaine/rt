% if ($Lite) {
%     my $d = RT::Model::Queue->new();
%     $d->load($Default);
<input name="<%$name%>" size="25" value="<%$d->name%>" />
% }
% else {
<select name="<%$name%>">
%     if ($ShowNullOption) {
  <option value="">-</option>
%     }
%     for my $queue (@{$session{$cache_key}}) {
  <option value="<% ($namedValues ? $queue->{name} : $queue->{id}) %>" 
  <% ($queue->{id} eq ($Default || '') ? 'selected="selected"' : '') |n %>>
    <%$queue->{name}%>
%             if ($Verbose and $queue->{description}) {
    (<%$queue->{description}%>)
%             }
  </option>
%     }
</select>
% }
<%args>
$CheckQueueRight => 'create_ticket'
$ShowNullOption => 1
$ShowAllQueues => 1
$name => undef
$Verbose => undef
$namedValues => 0
$Default => 0
$Lite => 0
</%args>
<%init>
my $cache_key = "SelectQueue---"
                . Jifty->web->current_user->id
                . "---$CheckQueueRight---$ShowAllQueues";

if (not defined $session{$cache_key} and not $Lite) {
    my $q = RT::Model::QueueCollection->new();
    $q->find_all_rows;
    
    while (my $queue = $q->next) {
        if ($ShowAllQueues || $queue->current_user_has_right($CheckQueueRight)) {
            push @{$session{$cache_key}}, {
                id          => $queue->id,
                name        => $queue->name,
                description => $queue->description,
            };
        }
    }
}
</%init>
