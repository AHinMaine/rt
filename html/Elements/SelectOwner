<select name="<%$name%>">
%if ($DefaultValue) {
<option <% !$Default ? "SELECTED" : '' %> value=""><%$DefaultLabel%></option>
%}


% $Default = 0 unless defined $Default && $Default =~ /^\d+$/;
%foreach my $User ( @users)  {
<option <% ( $User->id == $Default) ? "SELECTED" : ''%>
%if ($value_attribute eq 'id') {
    value="<%$User->id%>"
%} elsif ($value_attribute eq 'name') {
    value="<%$User->name%>"
%}
><& /Elements/ShowUser, User => $User &></option>
%}
</select>
<%INIT>

my @objects;
if ($ticket_obj) {
        @objects = ($ticket_obj);
}
elsif ($queue_obj) {
        @objects = ($queue_obj);
} 
elsif ($cfqueues) {
	@objects = keys %{$cfqueues};
}
else {
    # Let's check rights on an empty queue object. that will do a search for any queue.
    my $queue = RT::Model::Queue->new();
	      push( @objects, $queue );
}

my %user_uniq_hash;

$m->callback( %ARGS, objects => \@objects, Callbackname => 'UpdateobjectList');

foreach my $object (@objects) {
	my $Users = RT::Model::UserCollection->new();
        $Users->who_have_right(Right => 'OwnTicket', object => $object, IncludeSystemRights => 1, IncludeSuperusers => 0); 
        while (my $User = $Users->next()) {
                next if ($User->id == RT->nobody->id); # skip nobody here, so we can make them first later
	      $user_uniq_hash{$User->id()} = $User;
        }
}

my @users = sort { uc($a->name) cmp uc($b->name) } values %user_uniq_hash; 
unshift(@users, RT->nobody->user_object);

$m->callback( %ARGS, objects => \@objects, Callbackname => 'UpdateobjectList');


</%INIT>

<%ARGS>
$queue_obj => undef
$name => undef
$Default => 0
$User => undef
$ticket_obj => undef
$DefaultValue => 1
$DefaultLabel => "-"
$value_attribute => 'id'
$cfqueues => undef
</%ARGS>
