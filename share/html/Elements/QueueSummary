<tr class="<% $i%2 ? 'oddline' : 'evenline'%>" >
<td><a href="<% RT->config->get('web_path') %>/Search/Results.html?query=<% $all_q |u,n %>" title="<% $queue->{description} %>"><% $queue->{name} %></a></td>
