        size="<% $Rows %>"
%       }
        <% $Multiple && qq[multiple="multiple"] |n %> >
        <option value=""<% !$selected && qq[ selected="selected"] |n %>><&|/l&>(no value)</&></option>
%       $m->out($out);
      </select>
<%ARGS>
$object => undef
$CustomField => undef
$namePrefix => undef
$default => undef
$values => undef
$Multiple => 0
$Rows => undef
</%ARGS>

